{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "esnext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
        "@/*": ["./src/*"]
    },
    "incremental": true,
    "types": ["node"]
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist"]
}
